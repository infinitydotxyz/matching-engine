{
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": "src",
    "paths": {
      "@/config": ["config/index.ts"],
      "@/config/*": ["config/*"],
      "@/common/*": ["common/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["hardhat.config.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
